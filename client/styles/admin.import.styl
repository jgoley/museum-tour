@import 'tour_edit.import'

.tap-edit-list
  margin-bottom 30px
  padding-bottom 5px
  list-style-type none
  border-bottom 3px solid $secondary
  > li
    position relative
    border-bottom 1px solid lighten($secondary, 30%)
    padding 5px 3% 0 3%
    +mobile()
      padding 10px 3%
    &:last-of-type
      border 0
  .stop-number
  .title
    font-weight bold
    cursor pointer
    font-size 1.5em
    margin-right 3px
    +below(2)
      font-size 1em
    &:hover
      color $primary

.tour-edit-actions
  centerVertically()
  right 3%

.edit-tour
  color $body-text
  font-size 1em
  .title
  .sub-title
    font-size 1.3em
  &:hover
    color $primary
    text-decoration none
  .sub-title
    +mobile()
      display inline-block

.delete-tour
  font-size 1.5em
  color $m-gray
  &:hover
    color $primary

.tour-type-icon
  margin-left 5px
  font-size 1.3em
  +below(2)
    font-size 1em

.create-tour
  width 50%
  max-width 500px
  +between(2,3)
    width 75%
  +mobile()
    width 100%
  button
    margin-top 10px

