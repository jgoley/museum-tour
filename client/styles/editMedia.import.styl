.media-image
  position relative
  min-height 200px
  min-width 100%
  border-radius 4px
  background-position center center
  background-size cover
  i
  a
    display inline-block
    vertical-align middle
    padding 0 20px
    color white
    font-size 2em
    &:hover
      color $primary
  .delete-image
    margin-top -10px
  &:hover
    .curtain
    .image-options
      display block
      opacity 1
      visibility visible

.image-options
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  display none
  z-index 100000
