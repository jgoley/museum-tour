video
audio
img
  display block
  width 100%
  margin 0
  border-bottom 2px solid $l-gray
  +above(4)
    width 60%
    margin 0 auto

video
  background-color $m-gray

audio
  min-height 200px
  background-color #000
  background-repeat no-repeat
  background-size auto 120px
  background-position center 40%

video
  &.audio
  &.music
  background-color #000
  background-repeat no-repeat
  background-position center center
  &.audio
    background-image url($awsUrl+'audio-poster.png')
  &.music
    background-image url($awsUrl+'music-poster.png')

.video-wrap
  position relative

.tour-stop.single
  .audio-wrap
    justify-content center
  .audio-controls
    margin-bottom 10rem
  .audio-control
    height 10rem
    width 10rem
    font-size: 5rem
    .play
      &::before
        content: '\f04b'
        margin-left: 10px
  .audio-time
    font-size: 1.25rem
    margin-top: 1rem

.audio-wrap
  position: absolute
  padding: .5rem 3%;
  top: 0
  bottom: 0
  right: 0
  left: 0
  display flex
  justify-content flex-end
  align-items center
  transition .5s background ease-in-out
  border-top 1px solid #EEEEEE
  border-bottom 1px solid #EEEEEE
  &.active
    background: darken(white, 3%)
    .audio-time
      color: $d-gray
  &:not(.active)
    .audio-track__progress
      width 0% !important
  +above(4)
    padding: 0 20%

.audio-controls
  position: relative
  display: inline-flex
  flex-direction column
  align-items: center
  z-index 3

.audio-control
  position: relative
  display: inline-flex
  align-items: center
  justify-content: center
  border-radius: 100%
  background white
  border 2px solid $l-gray
  background white
  height: 5rem
  width: 5rem
  cursor: pointer
  z-index: 1
  font-size: 2rem
  &::before
    content: ''
    display: block
    icon-font()
    color: $m-gray;
    transition: .15s transform ease-in-out
    transform: scale(1)
    transform-origin: center
  +above(4)
    height: 3rem
    width: 3rem
    font-size: 1.5rem

  &:hover
    &::before
      transform: scale(1.1)

  &:active
    &::before
      transform: scale(.9)

  &.play
    &::before
      content: '\f04b'
      margin-left: 5px

  &.pause
    &::before
      content: '\f04c'

  &.loading
    &::before
      content: ''

.audio-time
  font-size: .85rem
  text-align: center
  margin-top: .1rem
  color: darken($m-gray, 20%)
  +above(4)
    font-size: .75rem

.audio-track
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 1
  cursor: pointer

.audio-track__progress
  transition: width .1s ease-in-out
  position: absolute
  top: 0
  bottom: 0
  background: darken(white, 10%)
  z-index: 2

.audio-track__time
  position absolute
  z-index: 5
  right: 3%
  top: 10%
