header
  width 100%
  overflow hidden
  background $primary //lighten($primary, 30%)
  padding 0 10px 2px 10px
  border-bottom 5px solid darken($primary,20%)
  position fixed
  top 0
  z-index 1000
  height 50px
  &#group-header
    position relative
  h1.menu-logo
    background url(images/title.png) no-repeat
    width 100px
    margin 20px auto 10px auto
    height 30px
    text-indent -9999px
    background-size 100px auto
    position absolute
    top 12px
    left 10px
    margin 0
  h1.center-logo
    left 50%
    right 50%
    margin-left -50px
    opacity .4
    transition .2s
    &:hover
      transition .2s
      opacity 1
    a
      text-indent -9999px
      display block
      height 100%
  &.home
    height 105px
    padding 0
    border none
    background #FFF
    position static
    margin-bottom 20px
    height auto
    padding 0
  .header-buttons
    position absolute
    right 0
    top 50%
    margin-right 3%
    transform translate(0, -50%)
  a
    &.btn
      padding 15px
      text-align center
      font-size 1em
      color white
      line-height 0
      border 1px solid white
      border-radius 4px
    &:active
      background none !important
      color #999 !important
    &:focus
      text-decoration none
    &.menu-btn
      &:hover
      &:focus
        background white
        color $body-text
        text-decoration none
    &.sign-out
      margin-left 10px
    &.backBtn
      position absolute
      left 3%
      top 50%
      transform translate(0,-50%)
      vertical-align middle
      display inline-block
      color white
      &:hover
        text-decoration none
      .fa
        line-height 0
