@import 'tour_edit.import'

.delete-tour
  position absolute
  right 5%
  top 50%
  transform translate(0, -50%)
  z-index 10

.tap-edit-list
  margin-bottom 30px
  list-style-type none
  border-top 2px solid $primary
  border-bottom 2px solid $primary
  > li
    position relative
    border-bottom 1px solid lighten($secondary, 30%)
    &:last-of-type
      border 0
  .stop-number
  .title
    font-weight bold
    cursor pointer
    font-size 1.5em
    margin-right 3px
    +below(2)
      font-size 1em
    &:hover
      color $primary


