template(name="editStop")
  if Template.subscriptionsReady
    +stopTitle(
      stop=stop
      editingStop=editingStop
      parentStopNumber=parentStopNumber
      deleting=deleting
      highlightStop=highlightStop)
    if isEditingStop
      .stop-editing-wrapper
        if notParent
          .editing-container
            +editing stop=stop tour=tour editingStop=editingStop
        if stop.isGroup
          if hasChildren
            +childStops(
              stop=stop
              addingStop=addingStop
              hasChildren=hasChildren
              foundChildren=foundChildren)
          if isAddingStop
            +addStop(
              type='new-child'
              tour=tour
              stop=stop
              parent=stop._id
              siblings=stop.children
              editingStop=editingStop
              addingStop=addingStop)
        if isDeleting
          .veil
  else
    +loading
