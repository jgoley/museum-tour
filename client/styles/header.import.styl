header
  position fixed
  top 0
  height 50px
  min-width 100%
  padding 0
  z-index 100
  border-bottom 5px solid rgba(50,50,50,.2)
  +below(3)
    background $primary
  &#group-header
    position relative
  &.home
    height 105px
    padding 0
    border none
    background #FFF
    position static
    margin-bottom 20px
    height auto
    padding 0
  button
    transition .2s ease-in-out
    +above(3)
      display none
    &.btn
      padding 14px 10px
      text-align center
      font-size 1em
      color lighten($primary, 80%)
      line-height 0
      background none
      border 1px solid lighten($primary, 40%)
      &:not(.no-hover):hover
        background-color darken($primary, 15%)
        border-color darken($primary, 25%)
        color white
        text-decoration none
      &:active
        background darken($primary, 60%)
        color white
      &:focus
      &:active
        outline 0
        box-shadow none
        color white

    &.menu-btn
    &.back-btn
      centerVertically()
      border-radius 3px
    &.back-btn
      left 0
      border-left 0
      border-top-left-radius 0
      border-bottom-left-radius 0
      .fa
        padding-right 2px
    &.menu-btn
      right 0
      border-right 0
      border-top-right-radius 0
      border-bottom-right-radius 0
      &::after
        content '\f0c9'
        @extend .font-awesome
        padding-left 5px
      &.menu-close
        &::after
          content '\f00d'

    &.sign-out
      margin-left 10px
      +above(2)
        position static
        transform translate(0,0)
    .fa
      line-height 0
      color lighten($primary, 50%)
.logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    width 100px
    height 24px
    z-index 1000
    margin 0
    background url(images/title.png) no-repeat
    background-size 100px 24px
    text-indent -9999px
    opacity .9
    transition opacity .2s
    +retina()
      background url(images/title-x2.png) no-repeat
      background-size 100px 24px
    &:hover
      transition opacity .2s
      opacity 1
    &:active
      opacity .3
    +above(3)
      left 3%
      right auto
      transform translate(0,-50%)
    a
      text-indent -9999px
      display block
      height 100%

