.edit-tour
  display inline-block
  margin-left 5px
  margin-top 4px
  vertical-align top
  font-size 150%
  cursor pointer
  &:hover
    color $primary

.editing-container
  min-height 0
  padding-left 6%
  padding-top 1em
  padding-bottom 1em
  transition ease-in-out
  &.showing
    min-height 1000px
  +below(2)
    padding-right 5%

.media-types
  display inline-block
  margin 0 2px
  li
    display inline-block
    margin 0 2px

.edit-parent-stops
  > li
    position relative
    padding 5px 3%
    border-bottom #CCC 1px solid
    background white
    transition 2s
    transition-delay .2s
    +mobile()
      padding 5px 3%
    &:nth-child(even)
      background $ll-gray
    .delete
      position absolute
      right 3%
      top 50%
      transform translate(0, -50%)
      color #CCC
      font-size 1.5em
      transition color .3s ease-in-out, transform 0s
      -webkit-transition color .3s ease-in-out, transform 0s
      -ms-transition color .3s ease-in-out, transform 0s
      &:hover
        color $primary
    &[draggable=true]
      .handle
        cursor grabbing
  .handle
    position absolute
    left 3%
    top 50%
    transform translate(0, -50%)
    font-size 1.5em
    color $l-gray
    margin-right 5px
    cursor grab
    +below(2)
      font-size 1em

.not-editing
  opacity .15
  pointer-events none

.edit-child-stops
  position relative
  > li
    position relative
    padding 5px 5%
    border-bottom 1px solid darken($ll-gray, 5%)
    &:nth-child(even)
      background $ll-gray
    .stop-number
      font-size 1.5em
      +below(2)
        font-size 1em

.sortble-ghost
  background #f0f0f0 !important
  box-shadow inset 0 0 5px rgba(0,0,0,.1)

.child-stops
  transition .2s

.edit-title-input
  vertical-align bottom
  font-size 1.5em
  font-weight bold
  height 40px

.edit-title-form
  display inline-block
  width 50%

.edit-title
  position relative
  margin-left 5px
  cursor pointer
  color $d-gray
  .action-btns-form
    position absolute
    right 10px
    top 50%
    transform translate(0, -50%)
    button
      font-size 20px
      transition $link-transition
    .save-title
      color $confirm
      &:hover
        color darken(@color, 30%)
        transition $link-transition
    .cancel-eidt-title
      $m-gray
      &:hover
        color darken(@color, 30%)
        transition $link-transition

.edit-title-btn
  i
    vertical-align top
    margin-top 7px
    margin-left 2px
    font-size 12px
    color lighten($d-gray, 20%)
    transition $link-transition
    +mobile()
      margin-top 3px
    &:hover
      color $primary
      transition $link-transition
.stop-count
  display inline-block
  margin-left 10px
  color lighten($secondary, 60%)
  +mobile()
    font-size .5em
  i
    margin-right 2px

.open
  background lighten($secondary, 90%) !important
  a.delete
    top 5px
    transform translate(0,0)

.edit-single
  +mobile()
    padding 10px 5px 10px 20px

.action-btns
  margin 35px 0 10px 0
  [type=submit]
    min-width 25%
    margin-right 3px

.delete-file
  margin-left 5px
  font-size 110%

.section-title
  margin-bottom 0
  margin-left 6%
  border-bottom 2px solid lighten($secondary, 80%)
  font-size 2.5em
  font-weight 800
  text-transform uppercase
  color $secondary-light
  letter-spacing .03em
  line-height 1em
  &.pull-back
    margin-left 0%

.main-title-wrap
  .main-title
    padding-right 15px
  .delete-tour
    centerVertically()
    right 3%
    color lighten($secondary, 60%)
    font-size 150%
    &:hover
      color $primary
  button
  a
    margin-right 10px
    &.show-tour-details
      font-size 2em
    &.view-tour
      font-size 1.8em
    &.view-tour
    &.show-tour-details
      &:focus
        background none
        box-shadow 0
        outline 0

.add-stop
  margin-top 1em

.add-stop-link
  background-color #FFF !important
  transition .3s
  &:hover
    background-color lighten($secondary, 80%) !important
    transition .3s
  i
  span
    vertical-align middle
  i
    font-size 70%
    margin-right 5px
  a
    color $primary
    display block
    &:hover
      text-decoration none

.add-stop-container
  padding-right 3.5%

.add-child
  a
    padding-left 15px

.new-child
  padding-bottom 20px
  padding-left 6%
  border-bottom 1px solid $secondary-light

.new-parent
  margin-bottom 50px
  padding-left 6%
  padding-top 10px
  border-top 3px solid $secondary
  .radio
    &:first-of-type
      margin-top 0

.edit-stop-details
  margin-bottom 2em
  margin-top 1em

.other-edit-options
  margin-bottom 20px
  padding-top 20px

.add-to-group-wrap
  select
  button
    display inline-block
    vertical-align middle

.parent-number
  color $m-gray

.no-file
  color lighten($primary,30%)
.no-file-warning
  color lighten($warning,20%)
  margin-left 5px

.saved
  button
    &.save
      &::before
        content '\f00c'
        @extend .font-awesome
        padding-right 5px
        transition .2s

.tiny-media
  min-width 100px
