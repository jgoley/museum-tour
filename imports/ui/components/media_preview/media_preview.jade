template(name="media_preview")
  if isVideo
    video.media-video(
      src="#{awsUrl}/#{stopTourPath}#{media}"
      posterImage=posterImage
      controls)
    .curtain
    .media-options
      a(href="#{awsUrl}/#{stopTourPath}#{media}" target='_blank')
        i.fa.fa-external-link
      a(href="").delete-media
        i.fa.fa-trash
    if deleting
      .deleting
        +loading
  else
    .media-image
      img(src="#{awsUrl}/#{stopTourPath}#{media}")
      .curtain
      .media-options
        a(href="#{awsUrl}/#{stopTourPath}#{media}" target='_blank')
          i.fa.fa-external-link
        a(href="").delete-media
          i.fa.fa-trash
      if deleting
       .deleting
         +loading
