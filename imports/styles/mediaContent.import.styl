video
audio
img
  display block
  width 100%
  margin 0
  border-bottom 2px solid $l-gray
  +above(4)
    width 60%
    margin 0 auto

video
  background-color $m-gray

audio
  min-height 200px
  background-color #000
  background-repeat no-repeat
  background-size auto 120px
  background-position center 40%

video
  &.audio
  &.music
  background-color #000
  background-repeat no-repeat
  background-position center center
  &.audio
    background-image url($awsUrl+'audio-poster.png')
  &.music
    background-image url($awsUrl+'music-poster.png')

.img-wrap
.video-wrap
  background-color lighten($l-gray, 50%)

.video-wrap
  position relative

.audio-wrap
  position: relative
  background: darken(white, 5%)
  padding: 2rem 3%;

.audio-control
  position: relative
  display: inline-flex
  align-items: center
  justify-content: center
  border-radius: 100%
  background white
  height: 5rem
  width: 5rem
  cursor: pointer
  z-index: 10
  &::before
    content: ''
    display: block
    icon-font()
    color: $primary;
    font-size: 2rem;
    transition: .15s transform ease-in-out
    transform: scale(1)
    transform-origin: center

  &:hover
    &::before
      transform: scale(1.1)

  &:active
    &::before
      transform: scale(.9)

  &.play
    &::before
      content: '\f04b'

  &.pause
    &::before
      content: '\f04c'

  &.loading
    &::before
      content: ''

.audio-track
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 1

.audio-track__progress
  transition: width .1s ease-in-out
  position: absolute
  top: 0
  bottom: 0
  background: darken(white, 10%)
  z-index: 2

.audio-track__time
  position absolute
  z-index: 5
  right: 3%
  top: 10%
