$header-height = 45px

header
  position relative
  // top 0
  height $header-height
  min-width 100%
  padding 0
  z-index 100
  // border-bottom 5px solid rgba(50,50,50,.2)
  &#group-header
    position relative
  &.home
    height 105px
    padding 0
    border none
    background #FFF
    position static
    margin-bottom 20px
    height auto
    padding 0
  button
    transition .2s ease-in-out
    +above(3)
      display none
    &.btn
      padding 14px 10px
      text-align center
      font-size .9em
      color lighten($primary, 80%)
      line-height 0
      background none
      &:not(.no-hover):hover
        background-color darken($primary, 15%)
        color white
        text-decoration none
      &:active
        background darken($primary, 60%)
        color white
      &:focus
      &:active
      &:active:focus
      &:hover
        outline 0
        box-shadow none
        color white

    &.menu-btn
    &.back-btn
      position absolute
      top 0
      bottom 0
      background-color darken($primary, 3%)
      border-radius 0
      +below(2)
        z-index 10000
    &.back-btn
      left 0
      border-left 0
      border-right 1px solid darken($primary, 20%)
      .fa
        padding-right 2px
    &.menu-btn
      right 0
      border-right 0
      border-left 1px solid darken($primary, 20%)
      &::after
        content '\f0c9'
        @extend .font-awesome
        padding-left 5px
      &.menu-close
        &::after
          content '\f00d'

    &.sign-out
      margin-left 10px
      +above(2)
        position static
        transform translate(0,0)
    .fa
      line-height 0
      color lighten($primary, 50%)
.header-wrap
  height $header-height
  background-color $primary

.logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    width 100px
    height 24px
    z-index 1000
    margin 0
    background url(images/title.png) no-repeat
    background-size 100px 24px
    text-indent -9999px
    opacity .9
    transition opacity .2s
    +retina()
      background url(images/title-x2.png) no-repeat
      background-size 100px 24px
    &:hover
      transition opacity .2s
      opacity 1
    &:active
      opacity .3
    +above(3)
      left 3%
      right auto
      transform translate(0,-50%)
    a
      text-indent -9999px
      display block
      height 100%

