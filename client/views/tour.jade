template(name="tour")

  img(src='#{tour.main_images}/#{tour.tourImg}' class='tourImage')
  div(class="tourTitle-wrap {{removeBorder}}")
  div
    h1 #{tour.mainTitle}: #{tour.subTitle}
  ul
    each showStops
      li
        a(href='#{tour}/stop/#{_id}') #{title}
          if isGroup
            span.group G
            span.group ({{childStopsNumber}})
        ul.media-types.list-unstyled
          if isGroup
            each getTypes
              li(class="type-#{this}") #{this}
          else
            li(class="type-#{mediaType}") #{mediaType}

