.tour-type
  centerVertically()
  left -10px
  @extend .icon
  color $primary
  font-size 2em
  &.adult
    &::before
      content '1'
  &.family
    &::before
      content '2'

.tap-list-title
  &.tour-title
    padding-left 40px

.tap-list
  .tour-title
    padding-left 15px
  .image
  .no-image
    min-height 50px
    min-width 50px
    background-position center center
    background-size cover
    border-radius 2px
  li
    &:nth-of-type(odd)
      .image
      .no-image
        -webkit-clip-path polygon(0 0, 100% 0%, 100% 100%, 15% 100%)
        clip-path polygon(0 0, 100% 0%, 100% 100%, 15% 100%)
    &:nth-of-type(even)
      .image
      .no-image
        -webkit-clip-path polygon(15% 0, 100% 0%, 100% 100%, 0 100%)
        clip-path polygon(15% 0, 100% 0%, 100% 100%, 0 100%)
  .no-image
    background $secondary

.tour-list__footer
  align-items center
  justify-content center
  min-height 65px
  a
    font-weight 800
    font-size 1.5em
    position absolute
    padding .25em 2em
    border-radius 4px
    color white
    background darken($primary, 20%)
    text-align center
