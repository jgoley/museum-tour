header
  position fixed
  top 0
  right 0
  left 0
  height 50px
  padding 0
  z-index 100
  border-bottom 5px solid rgba(50,50,50,.2)
  &#group-header
    position relative
  &.home
    height 105px
    padding 0
    border none
    background #FFF
    position static
    margin-bottom 20px
    height auto
    padding 0
  .header-buttons
    centerVertically()
    right 3%
  button
    &.btn
      padding 14px 12px
      margin 15px 0
      text-align center
      font-size 1em
      color white
      line-height 0
      border 1px solid white
      border-radius 4px
      background none
    &:active
      background none !important
    &:focus
      text-decoration none
    &.menu-btn
      transition .2s
      &:hover
      &:focus
        background white !important
        text-decoration none
        transition .2s
      +above(3)
        display none
    &.sign-out
      margin-left 10px
  a
    &.backBtn
      position absolute
      left 3%
      top 50%
      transform translate(0,-50%)
      vertical-align middle
      display inline-block
      color white
      &:hover
        text-decoration none
      +above(3)
        display none
      .fa
        line-height 0

.logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    width 100px
    height 24px
    z-index 1000
    margin 0
    background url(images/title.png) no-repeat
    background-size 100px auto
    text-indent -9999px
    opacity .4
    transition opacity .2s
    &:hover
      transition opacity .2s
      opacity 1
    +above(3)
      left 3%
      right auto
      transform translate(0,-50%)
    a
      text-indent -9999px
      display block
      height 100%

