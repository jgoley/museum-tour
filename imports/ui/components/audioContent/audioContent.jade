template(name="audioContent")
  .audio-wrap
    .audio-control(class=controlState)
      unless loaded 
        +loading small=true classes='no-bg'
    .audio-track
      .audio-track__progress(style="width: #{playProgress}%")
      .audio-track__time
        .audio-track__current-time= currentTime
        if playing 
          .audio-track__total-time= stopLength
    audio( src="#{awsUrl}/#{stop.tour}/#{stop.media}" )
