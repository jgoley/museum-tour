template(name="nav")
  nav.clearfix
    ul
      li
        a(href="{{pathFor 'currentTours'}}")
          i.fa.fa-list
          span Current
      li
        a(href="{{pathFor 'archivedTours'}}")
          i.fa.fa-archive
          span Archive
      li
        a(href="{{pathFor 'help'}}")
          i.fa.fa-info-circle
          span Help
      li
        a(href="{{pathFor 'feedback'}}")
          i.fa.fa-edit
          span Feedback

    if currentUser
      ul.admin
        h3 Admin

        li.admin
          a(href="{{pathFor 'createTour'}}")
            i.fa.fa-plus-square-o
            span Create Tour
        li.admin
          a(href="{{pathFor 'helpVideo'}}")
            i.fa.fa-edit
            span Help Video
        li.admin
          a(href="{{pathFor 'editTours'}}")
            i.fa.fa-edit
            span Edit Tours
        li.admin
          button.btn.sign-out
            span Sign Out
