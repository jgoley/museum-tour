template(name="archivedTours")
  .main-title-wrap
    h1.main-title Archived Tour
  ul.tap-list.archived-tours
    each tours
      li
        a(href="tour/#{_id}")
          +thumbnail tour=this
          .tap-list-title.tour-title
            h2
              | #{mainTitle}
              span #{subTitle}
              span.dates {{formatDate openDate}} - {{formatDate closeDate}}
